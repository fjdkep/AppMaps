<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_gr"
    tools:context=".community_chat">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/backgroudmain">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_Quaylai"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:background="#041f60"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Tương tác cộng đồng"
                android:textColor="@color/white"

                android:textSize="25sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_message"
        android:layout_width="match_parent"

        android:layout_height="635dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroudmain">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_Picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/backgroudmain"
                android:scaleType="fitCenter"

                android:src="@drawable/baseline_crop_original_24" />

            <EditText
                android:id="@+id/edtChat"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/cus_textbox"
                android:ems="10"
                android:hint="@string/chat"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColorHint="#706D6D" />

            <ImageButton
                android:id="@+id/btn_Send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:background="@color/backgroudmain"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_send_24" />
        </TableRow>
    </TableLayout>

</LinearLayout>